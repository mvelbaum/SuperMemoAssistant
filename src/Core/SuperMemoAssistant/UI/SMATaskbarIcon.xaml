<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    x:Class="SuperMemoAssistant.UI.SMATaskbarIcon">
  <tb:TaskbarIcon x:Key="TbIcon"
                  Visibility="Hidden"
                  IconSource="pack://application:,,,/SuperMemoAssistant;component/Resources/robot.ico"
                  MenuActivation="RightClick"
                  Initialized="Initialized"
                  TrayMouseDoubleClick="Settings"
                  PreviewTrayContextMenuOpen="PreviewTrayContextMenuOpen">
    <tb:TaskbarIcon.ContextMenu>
      <ContextMenu>
        <MenuItem Header="Settings" Click="Settings" />
        <!--<MenuItem Header="Test" Click="Test" />-->
        <Separator />
        <MenuItem Header="Exit" Click="Exit" />
      </ContextMenu>
    </tb:TaskbarIcon.ContextMenu>
  </tb:TaskbarIcon>
</ResourceDictionary>